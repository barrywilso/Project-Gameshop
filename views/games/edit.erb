<form action="/games/<%=@game.id%>" method="POST">

  <label for="platform">Platform:</label>
  <input required type="text" id="platform" name="platform" value = "<%=@game.platform%>">

  <label for="title">Title:</label>
  <input required type="text" id="title" name="title" value = "<%=@game.title%>">

  <label for="genre">Genre:</label>
  <input required type="text" id="genre" name="genre" value = "<%=@game.genre%>">

  <input type="submit" value="Edit Game">

</form>
